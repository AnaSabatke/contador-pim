programa {
 
  inclua biblioteca Util

  inteiro n, contador = 0
  funcao inicio() 
  {
    para(n = 1; n <= 56; n++)
    {
      se(contador == 3)
      {
        escreva("PIM, ")
        contador = 0;
        
        
      }
       senao
       
      {
        Util.aguarde(1000)
        se (n < 56)
        
      {
         escreva(n, ", ")
      }
         
         senao
      {
        escreva(n, ". ")
      }

        contador++
        
      
      
    }
  }
}

